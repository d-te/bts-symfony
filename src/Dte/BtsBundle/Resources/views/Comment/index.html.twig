{% block body %}
<table class="table table-striped">
    <colgroup>
        <col class="col-md-11">
        <col class="col-md-1">
    </colgroup>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>
                <strong><a href="{{ path('user_show', { 'id': entity.user.id }) }}">{{ entity.user.fullname }}</a>&nbsp;({% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %})</strong><br/>
                <div id="comment-body-textblock-{{ entity.id }}">
                {{ entity.body }}
                </div>
                <div id="comment-body-formblock-{{ entity.id }}" class="hidden">
                    {{ form(forms['edit'][entity.id], { 'id': "comment-form-" ~ entity.id, 'attr': {'class': 'comment-form', 'data-comment-id': entity.id }}) }}
                </div>
                <div id="comment-body-formblock-delete-{{ entity.id }}" class="hidden">
                    {{ form(forms['delete'][entity.id], { 'id': "comment-form-delete-" ~ entity.id, 'attr': {'class': 'comment-form-delete', 'data-comment-id': entity.id }}) }}
                </div>
            </td>
            <td>
                <a class="edit_comment_button" href="#" data-comment-id="{{ entity.id }}">edit</a>
                <br />
                <a class="delete_comment_button" href="#" data-comment-id="{{ entity.id }}">delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
