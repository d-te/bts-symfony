{% extends 'DteBtsBundle::base.html.twig' %}

{% block title 'Bug tracking system - Project list' %}

{% block content %}
    <h1>Project list</h1>

    <table class="table table-striped">
        <colgroup>
            <col class="col-md-1">
            <col class="col-md-2">
            <col class="col-md-7">
            <col class="col-md-1">
            <col class="col-md-1">
        </colgroup>
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Label/Summary</th>
                <th>Members</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.code }}</a></td>
                <td>{{ entity.label }}<br/><i>{{ entity.summary }}</i></td>
                <td>{{ entity.getMembers()|length }}</td>
                <td>
                    <a href="{{ path('project_show', { 'id': entity.id }) }}">show</a>
                    <br />
                    <a href="{{ path('project_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row">
        <a href="{{ path('project_new') }}" class="btn btn-default">Create a new entry</a>
    </div>
    {% endblock %}
