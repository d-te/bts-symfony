{% extends 'DteBtsBundle::base.html.twig' %}

{% block title 'Bug tracking system - Project' %}

{% block content %}
    <h1>Project</h1>

    <div class="row">
        <div class="col-md-12">
            <strong>({{ entity.code }})&nbsp;</strong>{{ entity.label }} &nbsp;&nbsp;
            <a href="{{ path('project_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;&nbsp;Edit</a>
            <br/>
            <br/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">Summary</div>
        <div class="col-md-8"><i>{{ entity.summary }}</i></div>
    </div>
    <div class="row">
        <div class="col-md-1">&nbsp;</div>
    </div>

    <div role="tabpanel">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#activities_pane" aria-controls="activities_pane" role="tab" data-toggle="tab">Activities</a></li>
        <li role="presentation"><a href="#members_pane" aria-controls="members_pane" role="tab" data-toggle="tab">Project members</a></li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane" id="members_pane">
            <div class="row">
                <div class="col-md-1">&nbsp;</div>
            </div>
            <table class="table table-striped">
                <colgroup>
                    <col class="col-md-6">
                </colgroup>
                <thead>
                    <tr>
                        <th>User</th>
                    </tr>
                </thead>
                <tbody>
                    {% for member in entity.getMembers() %}
                    <tr>
                        <td><a href="{{ path('user_show', { 'id': member.getId() }) }}">{{ member.getFullname() }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div role="tabpanel" class="tab-pane active" id="activities_pane">
            <div class="row">
                <div class="col-md-1">&nbsp;</div>
            </div>
            <table class="table table-striped">
                <colgroup>
                    <col class="col-md-2">
                    <col class="col-md-2">
                    <col class="col-md-2">
                    <col class="col-md-6">
                </colgroup>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>User</th>
                        <th>Issue</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                {% for activity in activities %}
                    <tr>
                        <td>{% if activity.created %}{{ activity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td><a href="{{ path('user_show', { 'id': activity.user.id }) }}">{{ activity.user.fullname }}</a></td>
                        <td><a href="{{ path('issue_show', { 'id': activity.issue.id }) }}">{{ activity.issue.code }}</a></td>
                        <td>{{ activity.message }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
      </div>
    </div>

    <div class="row">
        <div class="col-md-1">&nbsp;</div>
    </div>

    <div class="row">
        <a href="{{ path('project') }}">Back to the list</a>
        <br />
        <span>{{ form(delete_form) }}</span>
    </div>

{% endblock %}
