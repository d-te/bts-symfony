{% extends 'DteBtsBundle::base.html.twig' %}

{% block title 'Bug tracking system - User profile' %}

{% block content %}
    <h1>User profile</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ entity.avatar }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('user_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
    </ul>
{% endblock %}
