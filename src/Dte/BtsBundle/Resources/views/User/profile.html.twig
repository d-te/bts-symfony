{% extends 'DteBtsBundle::base.html.twig' %}

{% block title %}
    {{ 'bts.page.user_profile.head_title'|trans }}
{% endblock %}

{% block content %}
    <h1>{{ 'bts.page.user_profile.page_title'|trans }}</h1>

    <div class="row">
        <div class="col-md-2">
            {% if entity.avatar %}
            <img src="{{entity.avatar}}" width="100" >
            {% else %}
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> <i>{{ 'bts.user.no_avatar_label'|trans }}</i>
            {% endif %}
        </div>
        <div class="col-md-10">
            {{ entity.fullname }} ( {{ entity.email }} ) &nbsp;&nbsp;
            <a href="{{ path('user_profile_edit') }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;&nbsp;{{ 'bts.default.action.edit'|trans }}</a>
        </div>
    </div>
{% endblock %}
