{% extends 'DteBtsBundle::base.html.twig' %}

{% block title 'Bug tracking system - User profile' %}

{% block content %}
    <h1>User profile</h1>

    <div class="row">
        <div class="col-md-2">
            {% if entity.getAvatar() %}
            <img src="{{entity.getAvatar()}}" width="100" >
            {% else %}
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> <i>No avatar image</i>
            {% endif %}
        </div>
        <div class="col-md-10">
            {{ entity.fullname }} ( {{ entity.email }} ) &nbsp;&nbsp;
            <a href="{{ path('user_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;&nbsp;Edit</a>
        </div>
    </div>
{% endblock %}
