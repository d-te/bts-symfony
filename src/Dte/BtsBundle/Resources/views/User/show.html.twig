{% extends 'DteBtsBundle::base.html.twig' %}

{% block title 'Bug tracking system - User' %}

{% block content %}
    <h1>User</h1>

   <div class="row">
        <div class="col-md-2">
            {% if entity.getAvatar() %}
            <img src="{{entity.getAvatar()}}" width="100" >
            {% else %}
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> <i>No avatar image</i>
            {% endif %}
        </div>
        <div class="col-md-10">
            {{ entity.fullname }} ( {{ entity.email }} ) &nbsp;&nbsp;
            <a href="{{ path('user_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;&nbsp;Edit</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-1">&nbsp;</div>
    </div>

    <div role="tabpanel">
      <!-- Nav tabs -->
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#activities_pane" aria-controls="activities_pane" role="tab" data-toggle="tab">Activities</a></li>
        <li role="presentation"><a href="#issues_pane" aria-controls="issues_pane" role="tab" data-toggle="tab">Opened issues</a></li>
      </ul>

      <!-- Tab panes -->
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="activities_pane">
            <div class="row">
                <div class="col-md-1">&nbsp;</div>
            </div>
            <table class="table table-striped">
                <colgroup>
                    <col class="col-md-2">
                    <col class="col-md-1">
                    <col class="col-md-9">
                </colgroup>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Issue</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                {% for activity in entity.activities %}
                    <tr>
                        <td>{% if activity.created %}{{ activity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td><a href="{{ path('issue_show', { 'id': activity.issue.id }) }}">{{ activity.issue.code }}</a></td>
                        <td>{{ activity.message }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
      </div>
      <div role="tabpanel" class="tab-pane" id="issues_pane">
            <div class="row">
                <div class="col-md-1">&nbsp;</div>
            </div>
            <table class="table table-striped">
                <colgroup>
                    <col class="col-md-1">
                    <col class="col-md-10">
                    <col class="col-md-1">
                </colgroup>
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Summary</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                {% for issue in openedIssues %}
                    <tr>
                        <td><a href="{{ path('issue_show', { 'id': issue.id }) }}">{{ issue.code }}</a></td>
                        <td>{{ issue.summary }}</td>
                        <td>{{ issue.status.label }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
      </div>
    </div>

    <div class="row">
        <div class="col-md-1">&nbsp;</div>
    </div>

    <div class="row">
        <a href="{{ path('user') }}">Back to the list</a>
        <br />
        <span>{{ form(delete_form) }}</span>
    </div>

{% endblock %}
